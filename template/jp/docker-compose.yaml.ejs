version: "2.4"
services:
    shadowsocks-6:
        image: shadowsocks/shadowsocks-libev
        restart: always
        network_mode: "host"
        environment:
            SERVER_ADDR: "::"
            SERVER_PORT: 8388
            PASSWORD: <%-config.chachaPassword%>
            METHOD: xchacha20-ietf-poly1305
