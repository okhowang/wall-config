version: "2.4"
services:
    shadowsocks:
        image: shadowsocks/shadowsocks-libev
        restart: always
        ports:
        - "8388:8388/tcp"
        - "8388:8388/udp"
        environment:
            PASSWORD: <%-config.chachaPassword%>
            METHOD: xchacha20-ietf-poly1305
    shadowsocks2:
        image: shadowsocks/shadowsocks-libev
        restart: always
        ports:
        - "8389:8388/tcp"
        - "8389:8388/udp"
        environment:
            PASSWORD: <%-config.aesPassword%>
            METHOD: aes-256-gcm
